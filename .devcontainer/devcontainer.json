{
	"name": "Next.js with Mongo Compose",
	// Reference the Docker Compose file
	"dockerComposeFile": "../docker-compose.yml",
	// Specify which service VS Code should attach to for development
	"service": "app",
	// Specify the workspace path inside that service's container
	"workspaceFolder": "/workspaces/machine-ui",   // ‚Üê MUST match
    // Forward the necessary ports to your local machine
    "forwardPorts": [3000, 27017],
    // Run commands after the container is up and attached
	"postCreateCommand": "npm run dev"
}
